[user]
	name = {{ .name }}
	email = {{ .email }}
[core]
{{- if eq .chezmoi.os "windows" }}
	autocrlf = true
{{- else }}
	autocrlf = input
{{- end }}
	editor = code
[init]
	defaultBranch = main
[status]
	short = true
[pull]
	rebase = false
# Using SSH for git operations - no credential helper needed
